<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="MonoTestSolution.VehicleMakesListPage">

    <ListView  ItemsSource="{Binding Makes}"  ItemSelected="OnMakeSelected" HasUnevenRows="True" SeparatorVisibility="Default" SeparatorColor="Gray" RowHeight="100"  >
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Name}"  TextColor="Black" Detail="{Binding Abbr}">
                    <TextCell.ContextActions>
                        <MenuItem Text="Call" IsDestructive="true" />
                    </TextCell.ContextActions>
                </TextCell>
                
                
            </DataTemplate>
           
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>
