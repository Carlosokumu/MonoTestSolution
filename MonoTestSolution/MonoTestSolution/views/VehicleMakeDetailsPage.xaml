<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonoTestSolution.views.VehicleMakeDetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Path=Make.Name}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />


            <ListView  ItemsSource="{Binding Models}"  HasUnevenRows="True" SeparatorVisibility="Default" SeparatorColor="Gray" RowHeight="100"  >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Name}"  TextColor="Black" Detail="{Binding Abbr}"/>

                    </DataTemplate>

                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>